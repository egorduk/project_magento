<?xml version="1.0"?>
<config>
    <modules>
        <DeliveryInsurance_Insurance>
            <version>0.1.0</version>
            <depends>
            </depends>
        </DeliveryInsurance_Insurance>
    </modules>
    <frontend>
        <routers>
            <insurance>
                <use>standard</use>
                <args>
                    <module>DeliveryInsurance_Insurance</module>
                    <frontName>insurance</frontName>
                </args>
            </insurance>
        </routers>
    </frontend>
    <admin>
        <routers>
            <DeliveryInsurance_Insurance_admin_router>
                <use>admin</use>
                <args>
                    <module>DeliveryInsurance_Insurance</module>
                    <frontName>insurance</frontName>
                </args>
            </DeliveryInsurance_Insurance_admin_router>
        </routers>
    </admin>
    <global>
        <resources>
            <insurance_setup>
                <setup>
                    <module>DeliveryInsurance_Insurance</module>
                    <class>DeliveryInsurance_Insurance_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </insurance_setup>
            <insurance_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </insurance_write>
            <insurance_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </insurance_read>
        </resources>
        <blocks>
            <delivery_insurance>
                <class>DeliveryInsurance_Insurance_Block</class>
            </delivery_insurance>
            <adminhtml>
                <rewrite>
                    <sales_order_totals>DeliveryInsurance_Insurance_Block_Adminhtml_Totals_Order</sales_order_totals>
                    <sales_order_invoice_totals>DeliveryInsurance_Insurance_Block_Adminhtml_Totals_Invoice</sales_order_invoice_totals>
                    <sales_order_creditmemo_totals>DeliveryInsurance_Insurance_Block_Adminhtml_Totals_Creditmemo</sales_order_creditmemo_totals>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <delivery_insurance>
                <class>DeliveryInsurance_Insurance_Helper</class>
            </delivery_insurance>
        </helpers>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <save_shipping_method>
                        <type>singleton</type>
                        <class>DeliveryInsurance_Insurance_Model_Observer</class>
                        <method>saveShippingMethod</method>
                    </save_shipping_method>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <sales_model_service_quote_submit_after> <!-- Event called after order placed -->
                <observers>
                    <sales_model_service_quote_submit_after>
                        <type>singleton</type>
                        <class>DeliveryInsurance_Insurance_Model_Observer</class>
                        <method>saveOrderAfter</method>
                    </sales_model_service_quote_submit_after>
                </observers>
            </sales_model_service_quote_submit_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <delivery_insurance>
                        <class>DeliveryInsurance_Insurance_Model_Totals_Quote</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </delivery_insurance>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <delivery_insurance>
                        <class>DeliveryInsurance_Insurance_Model_Totals_Invoice</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </delivery_insurance>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <delivery_insurance>
                        <class>DeliveryInsurance_Insurance_Model_Totals_Creditmemo</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </delivery_insurance>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <delivery_insurance><to_order>*</to_order></delivery_insurance>
                <base_delivery_insurance><to_order>*</to_order></base_delivery_insurance>
            </sales_convert_quote_address>
        </fieldsets>
    </global>
</config>